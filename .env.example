
# News Scraper API Configuration
# This file serves as a template for your environment variables
# Copy this file to .env.local and fill in your actual API keys

# ===== Perplexity API Settings =====
# Used for generating enhanced prompts and fetching news articles
NEXT_PUBLIC_PERPLEXITY_API_KEY=your-perplexity-api-key
NEXT_PUBLIC_PERPLEXITY_ENDPOINT=https://api.perplexity.ai/chat/completions

# ===== OpenAI API Settings =====
# Used as an alternative AI provider for generating content
NEXT_PUBLIC_OPENAI_API_KEY=your-openai-api-key
NEXT_PUBLIC_OPENAI_ENDPOINT=https://api.openai.com/v1/chat/completions

# ===== Pinecone Vector Database Settings =====
# Used for storing and retrieving vector embeddings for semantic search
NEXT_PUBLIC_PINECONE_API_KEY=your-pinecone-api-key
NEXT_PUBLIC_PINECONE_URL=your-pinecone-url
NEXT_PUBLIC_PINECONE_NAMESPACE=your-pinecone-namespace
NEXT_PUBLIC_PINECONE_INDEX=your-pinecone-index
NEXT_PUBLIC_PINECONE_ENVIRONMENT=your-pinecone-environment

# ===== Supabase Settings =====
# Used for storing prompt logs and user data
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# ===== Application Settings =====
# Toggle to use mock data instead of making actual API calls
NEXT_PUBLIC_USE_MOCK_DATA=false

# ===== News API Settings (Optional) =====
# If you're using a dedicated news API service
# NEXT_PUBLIC_NEWS_API_KEY=your-news-api-key
# NEXT_PUBLIC_NEWS_API_ENDPOINT=https://newsapi.org/v2/
